{
  "name": "weather-api",
  "version": "1.0.0",
  "scripts": {
    "eslint": "eslint ./src/*",
    "start": "node --require=@babel/register ./src/app.js",
    "test": "mocha  ./src/**/*.test.js",
    "coverage": "cross-env NODE_ENV=coverage nyc npm run test"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/register": "^7.17.7",
    "axios-mock-adapter": "^1.20.0",
    "babel-plugin-istanbul": "^6.1.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "log4js": "^6.5.2",
    "sinon": "^14.0.0",
    "uuid": "^8.3.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "coverage": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "mocha": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "import/prefer-default-export": "off",
      "no-return-assign": [
        "error",
        "except-parens"
      ]
    }
  },
  "mocha": {
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "all": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "node_modules",
      "coverage",
      "**/*.test.js",
      "--exclude express app and config files below--",
      "src/app.js",
      "src/config.js"
    ],
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "sourceMap": false,
    "instrument": false
  }
}
